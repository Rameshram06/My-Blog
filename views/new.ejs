        <div class="col-md-10 col-lg-8 col-xl-7">
            <h1 class="createpost">Create Post Form</h1>
        <form action="/new" method="POST">
<div class="control-group">
  <div class="form-group floating-label-form-group controls">
    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Title" required  class="form-control">
  </div>
</div>

<div class="control-group">
  <div class="form-group floating-label-form-group controls">
    <label for="content">Content</label>
    <textarea name="content"  placeholder="Content ..." cols="30" rows="10" required  class="form-control"></textarea>
  </div>
  <div class="form-group mt-3">
    <input type="file" name="image" class="form-control-file" >
  </div>
</div>
<div class="form-group my-4 text-center">
 <button type="submit" value="Submit" class="btn btn-primary btn-xl">Add Post</button>
</div>
